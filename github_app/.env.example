# GitHub App Configuration
# Required: Your GitHub App ID (found in app settings)
GITHUB_APP_ID=12345

# Required: Path to the private key PEM file downloaded from app settings
GITHUB_APP_PRIVATE_KEY_PATH=./private-key.pem

# Required: Webhook secret configured in the app settings
GITHUB_APP_WEBHOOK_SECRET=your-webhook-secret-here

# Required: Devin API key for creating fix sessions
DEVIN_API_KEY=your-devin-api-key-here

# Optional: Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
FLASK_DEBUG=false
LOG_LEVEL=INFO

# Optional: Default scan settings (can be overridden per-repo via .codeql-fixer.yml)
DEFAULT_BATCH_SIZE=5
DEFAULT_MAX_SESSIONS=25
DEFAULT_SEVERITY_THRESHOLD=low
DEFAULT_QUERIES=security-extended
DEFAULT_BRANCH=main
